{% extends "layout.njk" %}
{% block content %}
  <div class="overview">
    <h1 style="text-align: center; padding-bottom: 2rem;">Welcome to the library</h1>
    {% if error %}
      <p>Error getting dynamic content.</p>
    {% else %}
      <div class="records">
        <p>The library has the following record counts:</p>
        <ul>
          <li>
            <span>Books</span>
            {{ bookCount }}</li>
          <li>
            <span>Copies</span>
            {{ bookInstanceCount }}</li>
          <li>
            <span>Copies available</span>
            {{ bookInstanceAvailableCount }}</li>
          <li>
            <span>Authors</span>
            {{ authorCount }}</li>
          <li>
            <span>Genres</span>
            {{ genreCount }}</li>
        </ul>
      </div>
      <footer>This simple application was created to learn Express and Mongoose.</footer>
    {% endif %}
  </div>
{% endblock %}