{% extends "authorDetails.njk" %}
{% block deleteAuthor %}
  {% if books|length %}
    <h2>This author still has books. Please delete the author's books before deleting the author.</h2>
  {% else %}
    <h3>Are you sure you want to delete this author?</h3>
    <form action="/catalog/author/{{ author.id }}/delete" method="post">
      <button class="btn btn-danger" type="submit">Confirm Delete Author</button>
    </form>
  {% endif %}
{% endblock %}