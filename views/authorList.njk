{% extends "layout.njk" %}
{% block content %}
  <h1>{{ title }}</h1>
  <ul>
    {% for author in authorList %}
      <li>
        <a href="{{ author.url }}">{{ author.name }}</a>
        <p>{{ author.lifespan }}
          {% if author.ageAtDeath !== null %}
            <span>(aged {{ author.ageAtDeath }})</span>
          {% endif %}
        </p>
      </li>
    {% else %}
      <li>There are no authors</li>
    {% endfor %}
  </ul>
{% endblock %}